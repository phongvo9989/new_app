<h1>Create a new articles</h1>

<%#  scope: model your working with :model name

url: where it is submitted to
local: true - using http instead of ajax
%>

<% if @article.errors.any?%>
  <h2>The following errors prevented the articles from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true, data: { turbo: false } do |f| %>

  <p>
    <%= f.label :title%><br/>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :desciption%><br/>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>